{

    "manifest_version": 2,
    "name": "Pinned Microsoft To Do",
    "version": "1.0",
    "description": "Open the Microsoft To Do app on a pinned tab.",
    "homepage_url": "https://github.com/gmatosferreira/pinnedMicrosoftToDo",
    "icons": {
        "48": "icons/todologo-48.png"
    },
    "permissions": [
        "<all_urls>",
        "tabs",
        "storage"
    ],
    "background": {
        "scripts": [
            "scripts/app.js",
            "scripts/updates.js"
        ]
    },

    "browser_action": {
        "default_icon": "icons/todologo-32.png",
        "default_title": "Pinned Microsoft To Do"
    },
    "web_accessible_resources": [
        "icons/*",
        "images/*",
        "pages/*"
    ]
}